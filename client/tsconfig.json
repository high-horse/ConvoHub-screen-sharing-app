{
  "compilerOptions": {
    "target": "es6",          // Target ECMAScript 6
    "module": "commonjs",     // Module code generation
    "outDir": "./assets/dist", // Output directory for compiled files
    "rootDir": "./scripts",    // Root directory of input files
    "strict": true,           // Enable all strict type-checking options
    "esModuleInterop": true,  // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true      // Skip type checking of declaration files
  },
  "include": ["scripts/*.ts"], // Include all TypeScript files in assets folder
  "exclude": ["node_modules"]    // Exclude node_modules folder
}
